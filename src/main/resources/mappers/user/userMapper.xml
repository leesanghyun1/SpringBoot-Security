<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test.user.mapper.UserMapper">

    <select id="select" resultType="com.example.test.user.vo.UserVo">
        select *
        from tb_user
        where login_id = #{loginId};
    </select>

    <insert id="insertSign" parameterType="com.example.test.user.vo.UserVo">
        <selectKey  keyProperty="userId" resultType="String" order="BEFORE">
            select MAX(user_id) + 1 from tb_user
        </selectKey>
        insert into tb_user(
                            user_id,
                            login_id,
                            password,
                            name,
                            address,
                            email,
                            mobileno,
                            birth
        )
        values (
        #{userId},
          #{loginId},
          #{password},
          #{name},
          #{address},
          #{email},
          #{mobileNo},
          #{birth}
        )
    </insert>

</mapper>